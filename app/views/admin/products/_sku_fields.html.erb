<div class="columns nested-fields" data-new-record="<%= form.object.new_record? %>">
  <div class="column is-6">
    <div class="field">
      <%= form.label :spec, '規格', class: 'label' %>
      <%= form.text_field :spec, placeholder:'規格',class: 'input' %>
    </div>
  </div>
  <div class="column is-2">
    <div class="field">
      <%= form.label :quantity, '數量', class: 'label' %>
      <%= form.number_field :quantity, class: 'input' %>
    </div>
  </div>
  <div class="column">
    <div class="field">
      
      <%= link_to "刪除",'#',class:'button is-danger has-margin-top-30',data:{action:'product-for#remove_skux'}%>
    </div>
  </div>
  <%= form.hidden_field :_destroy %>
</div>